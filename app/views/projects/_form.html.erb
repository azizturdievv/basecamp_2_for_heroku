<%= form_with(model: project, id: "stripe-login") do |form| %>
 <div class="field padding-bottom--24">
                  <label for="email">Project Name</label>
                   <%= form.text_field :name, required: true %>
                </div>
                <div class="field padding-bottom--24">
                  <div class="grid--50-50">
                    <label for="password">Project Description</label>
                  </div>
                  <%= form.text_area :description, required: true %>
                </div>
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
                <div class="field field-checkbox padding-bottom--24 flex-flex align-center">
                </div>
                <div class="field padding-bottom--24">
                  <%# <input type="submit" name="submit" value="Continue"> %>
                  <%= form.submit %>
                </div>
<% end %>

               
