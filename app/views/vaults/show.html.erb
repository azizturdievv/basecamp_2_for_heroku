
<%# <br><br><br> %>
<h1>
<%= @vault.name %>
</h1> <br>
<div>
  <%= link_to "Back to vaults", project_vaults_path(@project), class: "button-38" %>
  <%= link_to "Edit this vault", edit_project_vault_path(@project,@vault), class: "button-33" %> 
  <%= button_to "Destroy this vault", @vault, method: :delete, class: "button-24", style: "margin-left: 379px;margin-top: -51px;" %>

</div>
  <% if @vault.attachm.attached? %>

   <% if  @vault.attachm.image?%> 
<%= link_to image_tag(@vault.attachm, class: "img_upload"),  rails_blob_path(@vault.attachm, disposition: "attachment") %>
   
   <% elsif @vault.attachm.audio? %>
    <audio controls>
      <source src=" <%= rails_blob_url(@vault.attachm, disposition: "attachment") %>" type="audio/mpeg"/>
    </audio>
    <% else %>
    <%= link_to @vault.attachm.filename,  rails_blob_path(@vault.attachm, disposition: "attachment") %>
   <% end %>
  
  <% end %>
  



